<h1>Create a Movie</h1>
<%= form_for @movie do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %></br>
	<%= f.label :release_year %>
	<%= f.select :release_year, (1900..2009).to_a.map(&:to_s) %></br>
	<% @genres.each do |genre| %>
		<%=h label_tag "genres[]", genre.name %>		
		<%= check_box_tag "genres[]", genre.id %>
		</br>		
	<% end %>
	<%= f.submit "Save" %>
<% end %>

